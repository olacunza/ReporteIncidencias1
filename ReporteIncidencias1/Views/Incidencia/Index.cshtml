@model IEnumerable<ReporteIncidencias1.Models.Incidencia>
@{
    ViewBag.Tittle = "Buscar";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Buscar</title>
</head>
<body>
    <div>
        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm())
                {
                    <p>
                        Buscar por nombre: @Html.TextBox("nombre")
                        <input type="submit" value="Buscar" />
                    </p>
                }
                <p>
            </div>
            <div class="col-md-2 col-md-offset-4">
                <script>
                    var pfHeaderImgUrl = ''; var pfHeaderTagline = ''; var pfdisableClickToDel = 0;
